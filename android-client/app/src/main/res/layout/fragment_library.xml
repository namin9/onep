<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#16213E"
    android:padding="16dp"
    tools:context=".ui.LibraryFragment">

    <TextView
        android:id="@+id/library_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Library Codex"
        android:textSize="24sp"
        android:textColor="#E94560"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_refresh_codex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Refresh Codex"
        android:backgroundTint="#0F3460"
        android:textColor="#FFFFFF"
        android:layout_marginStart="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/library_title"
        app:layout_constraintBottom_toBottomOf="@+id/library_title" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/library_codex_recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/library_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_codex_entry"/>

</androidx.constraintlayout.widget.ConstraintLayout>